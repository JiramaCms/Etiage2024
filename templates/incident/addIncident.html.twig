{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <!-- Début de la carte Bootstrap -->
            <div class="card col-md-8 mt-4"> <!-- Ajout de mt-4 pour le margin-top -->
                <div class="card-body">
                    <h3 class="card-title fw-bold">Ajouter un incident</h3>
                    <h4><b> Nom du Site</b> : {{site.libelle}} à {{site.adresse}}</h4>
                    
                    <!-- Début du formulaire -->
                    {{ form_start(form, { attr: { novalidate: 'novalidate', class: 'row g-3' } }) }}
                    
                    {% if form.site is defined %}
                        <div class="col-12">
                            {{ form_label(form.site, "Site", {'label_attr': {'class': 'form-label  fs-5'}}) }}
                            {{ form_widget(form.site, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            <small>{{ form_help(form.site) }}</small>
                            <div class="form_error">
                                {{ form_errors(form.site) }}
                            </div>
                        </div>
                    {% endif %}

                    <div class="col-12">
                        {{ form_label(form.libelle, "Libelle", {'label_attr': {'class': 'form-label  fs-5'}}) }}
                        {{ form_widget(form.libelle, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'mettez le Libelle ici'}}) }}
                        <small>{{ form_help(form.libelle) }}</small>
                        <div class="form_error">
                            {{ form_errors(form.libelle) }}
                        </div>
                    </div>

                    <div class="col-11 mb-3">
                        {{ form_label(form.description, "Description", {'label_attr': {'class': 'col-sm-2 col-form-label fs-5'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-lg ', 'style': 'height: 100px', 'placeholder': "Description de l'incident"}}) }}
                        <small>{{ form_help(form.description) }}</small>
                        <div class="form_error">
                            {{ form_errors(form.description) }}
                        </div>
                    </div>

                    <div class="col-12">
                        {{ form_label(form.daty, "Date de l'incident", {'label_attr': {'class': 'form-label fs-5'}}) }}
                        {{ form_widget(form.daty, {'attr': {'class': 'form-control form-control-lg'}}) }}
                        <small>{{ form_help(form.daty) }}</small>
                        <div class="form_error">
                            {{ form_errors(form.daty) }}
                        </div>
                    </div>

                    <!-- Bouton de soumission -->
                    <div class="text-center">
                        <input type="submit" value="Ajouter incident" class="btn btn-primary btn-lg">
                    </div>
                    
                    {{ form_end(form) }}
                    <!-- Fin du formulaire -->
                </div>
            </div>
            <!-- Fin de la carte Bootstrap -->
        </div>
    </div>
{% endblock %}
