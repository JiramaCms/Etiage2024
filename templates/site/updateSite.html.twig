{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <!-- Début de la carte Bootstrap -->
            <div class="card col-md-8 mt-4"> <!-- Ajout de mt-4 pour le margin-top -->
                <div class="card-body">
                    <h5 class="card-title">Modifier le site</h5>
                    
                    <!-- Début du formulaire -->
                    {{ form_start(form, { attr: { novalidate: 'novalidate', class: 'row g-3' } }) }}
                    
                    <div class="col-12">
                        {{ form_label(form.libelle, "Libelle", {'label_attr': {'class': 'form-label-lg'}}) }}
                        {{ form_widget(form.libelle, {'attr': {'class': 'form-control-lg'}}) }}
                        <small>{{ form_help(form.libelle) }}</small>
                        <div class="form_error">
                            {{ form_errors(form.libelle) }}
                        </div>
                    </div>

                    <div class="col-12">
                        {{ form_label(form.adresse, "Adresse", {'label_attr': {'class': 'form-label-lg'}}) }}
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control-lg', 'placeholder': 'mettez le Libelle ici'}}) }}
                        <small>{{ form_help(form.adresse) }}</small>
                        <div class="form_error">
                            {{ form_errors(form.adresse) }}
                        </div>
                    </div>
                    <div class="col-6">
                        {{ form_label(form.latitude, "Latitude", {'label_attr': {'class': 'form-label-lg'}}) }}
                        {{ form_widget(form.latitude, {'attr': {'class': 'form-control-lg'}}) }}
                        <small>{{ form_help(form.latitude) }}</small>
                        <div class="form_error">
                            {{ form_errors(form.latitude) }}
                        </div>
                    </div>
                    <div class="col-6">
                        {{ form_label(form.longitude, "Longitude", {'label_attr': {'class': 'form-label-lg'}}) }}
                        {{ form_widget(form.longitude, {'attr': {'class': 'form-control-lg'}}) }}
                        <small>{{ form_help(form.longitude) }}</small>
                        <div class="form_error">
                            {{ form_errors(form.longitude) }}
                        </div>
                    </div>
                    <div class="col-12">
                        {{ form_label(form.sources, "Sources", {'label_attr': {'class': 'form-label-lg'}}) }}
                        {{ form_widget(form.sources, {'attr': {'class': 'form-control-lg'}}) }}
                        <small>{{ form_help(form.sources) }}</small>
                        <div class="form_error">
                            {{ form_errors(form.sources) }}
                        </div>
                    </div>

                    <!-- Bouton de soumission -->
                    <div class="text-center">
                        <input type="submit" value="Modifier le site" class="btn btn-secondary">
                    </div>
                    
                    {{ form_end(form) }}
                    <!-- Fin du formulaire -->
                </div>
            </div>
            <!-- Fin de la carte Bootstrap -->
        </div>
    </div>
{% endblock %}
