{% extends 'base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}
<div class="container">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="tabOverview" data-bs-toggle="tab" data-bs-target="#tabContentOverview" aria-controls="tabContentOverview" aria-selected="true">
                Overview
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tabPrices" data-bs-toggle="tab" data-bs-target="#tabContentPrices" aria-controls="tabContentPrices" aria-selected="false">
                Prices
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tabReviews" data-bs-toggle="tab" data-bs-target="#tabContentReviews" aria-controls="tabContentReviews" aria-selected="false">
                Reviews
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tabAbout" data-bs-toggle="tab" data-bs-target="#tabContentAbout" aria-controls="tabContentAbout" aria-selected="false">
                About
            </button>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="tabContentOverview" role="tabpanel" aria-labelledby="tabOverview">
            <!-- Contenu pour l'onglet Overview -->
            <div class="content">
                <h3>Overview Content</h3>
                <p>Content specific to Overview tab.</p>
            </div>
        </div>
        <div class="tab-pane fade" id="tabContentPrices" role="tabpanel" aria-labelledby="tabPrices">
            <!-- Contenu pour l'onglet Prices -->
            <div class="content">
                <h3>Prices Content</h3>
                <p>Content specific to Prices tab.</p>
            </div>
        </div>
        <div class="tab-pane fade" id="tabContentReviews" role="tabpanel" aria-labelledby="tabReviews">
            <!-- Contenu pour l'onglet Reviews -->
            <div class="content">
                <h3>Reviews Content</h3>
                <p>Content specific to Reviews tab.</p>
            </div>
        </div>
        <div class="tab-pane fade" id="tabContentAbout" role="tabpanel" aria-labelledby="tabAbout">
            <!-- Contenu pour l'onglet About -->
            <div class="content">
                <h3>About Content</h3>
                <p>Content specific to About tab.</p>
            </div>
        </div>
    </div>
</div>

{% endblock %}
